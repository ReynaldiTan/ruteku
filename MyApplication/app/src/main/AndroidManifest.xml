<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.umn.mobile.mymaps">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme"/>
        <activity
            android:name="id.ac.umn.mobile.mymaps.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="id.ac.umn.mobile.mymaps.MainActivity" />
        <activity android:name="id.ac.umn.mobile.mymaps.LoginActivity" />
        <activity android:name="id.ac.umn.mobile.mymaps.SignUpActivity" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="id.ac.umn.mobile.mymaps.MenuActivity"
            android:label="@string/title_activity_menu" />
        <activity android:name="id.ac.umn.mobile.mymaps.MainMenuActivity" />
        <activity android:name="id.ac.umn.mobile.mymaps.searchActivity" />
        <activity android:name="id.ac.umn.mobile.mymaps.ScrollMenu"/>

</manifest>